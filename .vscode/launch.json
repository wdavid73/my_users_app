  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter Dev Flavor",
      "request": "launch",
      "type": "dart",
      "flutterMode": "debug",
      "program": "lib/main.dart",
      "args": ["--flavor", "dev"]
    },
    {
      "name": "Flutter Staging Flavor",
      "type": "dart",
      "request": "launch",
      "program": "lib/flavors/main_staging.dart",
      "args": ["--flavor", "staging"],
      "flutterMode": "debug"
    },
    {
      "name": "Flutter Prod Flavor",
      "type": "dart",
      "request": "launch",
      "program": "lib/flavors/main_prod.dart",
      "args": ["--flavor", "prod"],
      "flutterMode": "release"
    }
  ]
}
